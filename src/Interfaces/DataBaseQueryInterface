<?php

namespace Demo;

use Demo\Database\DataBaseQuery;

Interface DataBaseQueryInterface
{
    /**
     * This method create the record from a table.
     *
     * @params array $associativeArray
     * @params string $tableName
     *
     * @return true or false
     */
    public static function create($associativeArray, $tableName);

    /**
     * This method update record in a database table.
     *
     * @params int $id
     * @params string $tableName
     *
     * @return associative array;
     */
    public function read($id, $tableName);

    /**
     * This method delete a row from the table by the row id.
     *
     * @params int $updateParams
     * @params array associativeArray
     * @params string $tableName
     *
     * @return true or false
     */
    public static function update($updateParams, $associativeArray, $tableName);

    /**
     * This method find a record by id.
     *
     * @params int $id
     *
     * @return true
     */
    public static function delete($id);
}